!!!5
%html{lang: "en"}
  %head
    %title Ikat

    = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true

    = csrf_meta_tags

    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "//assets.helpful.io/assets/widget.js"

    %script{src: "//use.typekit.net/bna3bdd.js"}
    :coffee
      try
        Typekit.load()
  %body
    %header#header
      .row
        %aside
          %h1.brand
            = link_to "Ikat", root_path
        %section
          %nav.primary
            %ul
              %li= link_to "Explore", explore_path
              - if current_user
                %li= link_to "You", profile_path(username: current_user.username)
          %nav.secondary
            %ul
              - if current_user
                %li= link_to "Settings", settings_path
                %li= link_to "Logout", logout_path
              - else
                %li= link_to "Login", login_path
                %li= link_to "Join", join_path

    = yield

    %footer#footer
      %nav
        %ul
          %li= link_to "About", about_path
          %li= link_to "Blog", blog_path
          %li= helpful_link "Support"
      %p &copy; #{Time.now.year} #{link_to("Ikat", root_path)}
