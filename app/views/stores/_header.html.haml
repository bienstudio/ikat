%header
  .information.row
    %section.col-17
      %h2= @store.name
      %p
        = outgoing_link_to @store.domain, "//#{@store.domain}"
    %aside.col-4
      %ul.counts
        %li= link_to pluralize(@store.followers.count, 'Follower'), store_followers_path(store_domain: @store.domain), class: "btn #{list == 'followers' ? 'btn-black' : nil}"
    %aside.col-3.omega
      %figure.logo
        = image_tag @store.logo_url(:medium)
  .lists.row
    %ul.col-21
      %li
        = link_to store_path(store_domain: @store.domain), class: "btn #{list == 'inventory' ? 'btn-black' : nil}" do
          %span
            = pluralize(@store.inventory.product_count, 'Product')
    %nav.col-3.omega
      = link_to "#{current_user.follows?(@store) ? 'Unfollow' : 'Follow'}", store_flux_path(store_domain: @store.domain), class: "user-flux btn #{current_user.follows?(@store) ? 'unfollow btn-red' : 'follow btn-green'}", remote: true, method: :post
